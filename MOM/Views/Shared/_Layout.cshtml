<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - MoMify</title>

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600|Nunito:300,400,600,700|Poppins:300,400,500,600" rel="stylesheet">

    <!-- Vendor CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet" />

    <!-- Main CSS -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <!-- Logo -->
        <div class="d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="MoMify">
                <span class="d-none d-lg-block fw-bold text-primary">MoMify</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <!-- Header Right -->
        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <!-- Notification -->
                <li class="nav-item dropdown">
                    <a class="nav-link nav-icon" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="badge bg-primary badge-number">2</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                        <li class="dropdown-header">
                            You have 2 notifications
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="notification-item">
                            <i class="bi bi-calendar-event text-success"></i>
                            <div>
                                <h4>New Meeting</h4>
                                <p>Department meeting scheduled</p>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="dropdown-footer">
                            <a href="#">View all</a>
                        </li>
                    </ul>
                </li>

                <!-- Profile -->
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" data-bs-toggle="dropdown">
                        <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">
                            @User.Identity?.Name ?? "Admin"
                        </span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@User.Identity?.Name ?? "Admin"</h6>
                            <span>Administrator</span>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               asp-controller="Account" asp-action="Profile">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               asp-controller="Account" asp-action="Settings">
                                <i class="bi bi-gear"></i>
                                <span>Account Settings</span>
                            </a>
                        </li>

                        <li><hr class="dropdown-divider"></li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center text-danger"
                               asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </li>

            </ul>
        </nav>
    </header>
    <!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Department" asp-action="DepartmentList">
                    <i class="bi bi-diagram-3"></i>
                    <span>Departments</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="MeetingVenue" asp-action="MeetingVenueList">
                    <i class="bi bi-geo-alt"></i>
                    <span>Meeting Venue</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="MeetingMembers" asp-action="MeetingMemberList">
                    <i class="bi bi-people"></i>
                    <span>Members</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Staff" asp-action="StaffList">
                    <i class="bi bi-people"></i>
                    <span>Staff</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="MeetingType" asp-action="MeetingTypeList">
                    <i class="bi bi-tags"></i>
                    <span>Meeting Types</span>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Meeting" asp-action="MeetingList">
                    <i class="bi bi-calendar-event"></i>
                    <span>Meetings</span>
                </a>
            </li>

            <li class="nav-heading">Pages</li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="About">
                    <i class="bi bi-info-circle"></i>
                    <span>About</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Contact">
                    <i class="bi bi-envelope"></i>
                    <span>Contact</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-lock"></i>
                    <span>Privacy Policy</span>
                </a>
            </li>

        </ul>
    </aside>
    <!-- End Sidebar -->
    <!-- ======= Main ======= -->
    <main id="main" class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer"></footer>

    <!-- Vendor JS -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>

    <!-- Main JS -->
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
