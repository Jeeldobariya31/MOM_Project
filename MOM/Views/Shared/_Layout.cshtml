<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - MoMify</title>

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Nunito|Poppins" rel="stylesheet">

    <!-- Vendor CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/simple-datatables/style.css" rel="stylesheet" />

    <!-- Main CSS -->
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/custom.css" rel="stylesheet" />
    <link href="~/assets/css/department.css" rel="stylesheet" />


    
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                <img src="~/assets/img/logo.png" alt="MoMify">
                <span class="d-none d-lg-block fw-bold text-primary">MoMify</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" data-bs-toggle="dropdown">
                        <img src="~/assets/img/profile-img.jpg" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">Admin</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end profile">
                        <li>
                            <a class="dropdown-item d-flex align-items-center"
                               asp-controller="Auth" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Logout</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
    </header>
    <!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">

            <!-- Dashboard -->
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid"></i><span>Dashboard</span>
                </a>
            </li>

            <!-- Department -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#department-nav">
                    <i class="bi bi-building"></i><span>Department</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="department-nav" class="nav-content collapse">
                    <li><a asp-controller="Department" asp-action="DepartmentList"><i class="bi bi-circle"></i>List</a></li>
                    <li><a asp-controller="Department" asp-action="DepartmentAddEdit"><i class="bi bi-circle"></i>Add / Edit</a></li>
                </ul>
            </li>

            <!-- Meeting Venue -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#venue-nav">
                    <i class="bi bi-geo-alt"></i><span>Meeting Venue</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="venue-nav" class="nav-content collapse">
                    <li><a asp-controller="MeetingVenue" asp-action="MeetingVenueList"><i class="bi bi-circle"></i>List</a></li>
                    <li><a asp-controller="MeetingVenue" asp-action="MeetingVenueAddEdit"><i class="bi bi-circle"></i>Add / Edit</a></li>
                </ul>
            </li>

            <!-- Meeting Members -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#member-nav">
                    <i class="bi bi-people"></i><span>Meeting Members</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="member-nav" class="nav-content collapse">
                    <li><a asp-controller="MeetingMembers" asp-action="MeetingMemberList"><i class="bi bi-circle"></i>List</a></li>
                    <li><a asp-controller="MeetingMembers" asp-action="MeetingMemberAddEdit"><i class="bi bi-circle"></i>Add / Edit</a></li>
                </ul>
            </li>

            <!-- Meeting Types -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#type-nav">
                    <i class="bi bi-tags"></i><span>Meeting Types</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="type-nav" class="nav-content collapse">
                    <li><a asp-controller="MeetingType" asp-action="MeetingTypeList"><i class="bi bi-circle"></i>List</a></li>
                    <li><a asp-controller="MeetingType" asp-action="MeetingTypeAddEdit"><i class="bi bi-circle"></i>Add / Edit</a></li>
                </ul>
            </li>

            <!-- Meetings -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#meeting-nav">
                    <i class="bi bi-calendar-event"></i><span>Meetings</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="meeting-nav" class="nav-content collapse">
                    <li><a asp-controller="Meeting" asp-action="MeetingList"><i class="bi bi-circle"></i>Meeting List</a></li>
                    <li><a asp-controller="Meeting" asp-action="MeetingAddEdit"><i class="bi bi-circle"></i>Schedule</a></li>
                </ul>
            </li>

            <!-- Staff -->
            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#staff-nav">
                    <i class="bi bi-person-badge"></i><span>Staff</span>
                    <i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="staff-nav" class="nav-content collapse">
                    <li><a asp-controller="Staff" asp-action="StaffList"><i class="bi bi-circle"></i>List</a></li>
                    <li><a asp-controller="Staff" asp-action="StaffAddEdit"><i class="bi bi-circle"></i>Add / Edit</a></li>
                </ul>
            </li>

            <!-- Pages -->
            <li class="nav-heading">Pages</li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="About">
                    <i class="bi bi-info-circle"></i><span>About</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Contact">
                    <i class="bi bi-envelope"></i><span>Contact</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-lock"></i><span>Privacy Policy</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" asp-controller="Home" asp-action="Terms">
                    <i class="bi bi-file-text"></i><span>Terms & Conditions</span>
                </a>
            </li>

        </ul>
    </aside>
    <!-- End Sidebar -->
    <!-- ======= Main ======= -->
    <main id="main" class="main">
        @RenderBody()
    </main>

    <!-- Vendor JS -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/vendor/quill/quill.js"></script>
    <script src="~/assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="~/assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="assets/js/main.js"></script>

    @RenderSection("Scripts", false)

</body>
</html>
