@{
    ViewData["Title"] = "About";
}

<div class="pagetitle">
    <h1>About MoMify</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item active">About</li>
        </ol>
    </nav>
</div>

<section class="section">

    <!-- Intro Section -->
    <div class="row align-items-center mb-4">
        <div class="col-lg-6">
            <h3 class="fw-bold text-primary mb-3">What is MoMify?</h3>
            <p class="text-muted">
                <strong>MoMify</strong> is a modern and efficient
                <strong>Minutes of Meeting (MoM) Management System</strong>
                designed to streamline meeting documentation, participant
                management, decisions, and action tracking.
            </p>
            <p class="text-muted">
                It helps organizations maintain transparency, accountability,
                and consistency across all meetings while reducing manual effort.
            </p>
        </div>

        <div class="col-lg-6 text-center">
            <img src="https://images.unsplash.com/photo-1552664730-d307ca884978"
                 class="img-fluid rounded shadow"
                 alt="Meeting Discussion">
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <h4 class="fw-bold mb-3 text-center">Why Choose MoMify?</h4>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c"
                     class="card-img-top"
                     alt="Collaboration">
                <div class="card-body">
                    <h6 class="card-title fw-bold">Smart Collaboration</h6>
                    <p class="card-text text-muted small">
                        Centralize meetings, departments, members, and decisions
                        in one secure platform.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1519389950473-47ba0277781c"
                     class="card-img-top"
                     alt="Productivity">
                <div class="card-body">
                    <h6 class="card-title fw-bold">Improved Productivity</h6>
                    <p class="card-text text-muted small">
                        Reduce paperwork and automate meeting records with a
                        clean, user-friendly interface.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="https://images.unsplash.com/photo-1556761175-4b46a572b786"
                     class="card-img-top"
                     alt="Security">
                <div class="card-body">
                    <h6 class="card-title fw-bold">Secure & Scalable</h6>
                    <p class="card-text text-muted small">
                        Built using ASP.NET MVC & Bootstrap 5 with a scalable
                        architecture suitable for growing organizations.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Section -->
    <div class="row align-items-center">
        <div class="col-lg-6 text-center mb-3 mb-lg-0">
            <img src="https://images.unsplash.com/photo-1517433456452-f9633a875f6f"
                 class="img-fluid rounded shadow"
                 alt="Technology Stack">
        </div>

        <div class="col-lg-6">
            <h4 class="fw-bold text-primary mb-3">Technology Behind MoMify</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    ASP.NET MVC (.NET)
                </li>
                <li class="list-group-item">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Bootstrap 5 & NiceAdmin UI
                </li>
                <li class="list-group-item">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    SQL Server Database
                </li>
                <li class="list-group-item">
                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                    Secure, modular & maintainable architecture
                </li>
            </ul>
        </div>
    </div>

</section>
