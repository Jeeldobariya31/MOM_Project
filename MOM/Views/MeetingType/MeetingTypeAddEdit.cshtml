@{
    ViewData["Title"] = "Add / Edit Meeting Type";
}

<div class="pagetitle">
    <h1>Add / Edit Meeting Type</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meeting Type</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-8">

            <div class="card department-card">
                <div class="card-body">

                    <h5 class="card-title">
                        <i class="bi bi-tags text-primary me-1"></i>
                        Meeting Type Information
                    </h5>

                    <p class="text-muted">
                        This page will be used to <strong>add</strong> or <strong>edit</strong>
                        meeting types such as Board Meetings, Client Meetings, Trainings,
                        Reviews, and Emergency Sessions.
                    </p>

                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item">
                            <strong>MeetingTypeID:</strong> Auto-generated unique identifier
                        </li>
                        <li class="list-group-item">
                            <strong>MeetingTypeName:</strong> Required name of the meeting type
                        </li>
                        <li class="list-group-item">
                            <strong>Remarks:</strong> Short description or purpose
                        </li>
                    </ul>

                    <div class="alert alert-info mt-4 mb-0">
                        Form UI will be added here in the next phase.
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
