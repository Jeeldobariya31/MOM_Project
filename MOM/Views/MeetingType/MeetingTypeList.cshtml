@model System.Data.DataTable

@{
    ViewData["Title"] = "Meeting Type List";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
    var sortBy = ViewBag.SortBy as string ?? "MeetingTypeName";
    var sortOrder = ViewBag.SortOrder as string ?? "asc";
    var totalRecords = ViewBag.TotalRecords as int? ?? 0;
    var filteredRecords = ViewBag.FilteredRecords as int? ?? 0;
}

<div class="pagetitle">
    <h1>Meeting Types</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meeting Types</li>
        </ol>
    </nav>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <!-- Header with Add Button -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h5 class="card-title mb-1">
                                <i class="bi bi-tags text-primary me-2"></i>
                                Meeting Type Management
                            </h5>
                            <p class="text-muted small mb-0">
                                Showing @filteredRecords of @totalRecords meeting types
                            </p>
                        </div>
                        <a asp-action="MeetingTypeAddEdit" class="btn btn-primary">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Meeting Type
                        </a>
                    </div>

                    <!-- Search and Filter Section -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form method="get" class="d-flex">
                                <input type="hidden" name="sortBy" value="@sortBy" />
                                <input type="hidden" name="sortOrder" value="@sortOrder" />
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           name="searchTerm" 
                                           value="@searchTerm" 
                                           class="form-control" 
                                           placeholder="Search meeting types..." />
                                    <button type="submit" class="btn btn-outline-secondary">
                                        Search
                                    </button>
                                    @if (!string.IsNullOrEmpty(searchTerm))
                                    {
                                        <a href="@Url.Action("MeetingTypeList")" class="btn btn-outline-danger">
                                            <i class="bi bi-x-lg"></i>
                                        </a>
                                    }
                                </div>
                            </form>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportData('excel')">
                                    <i class="bi bi-file-earmark-excel me-1"></i>
                                    Excel
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="exportData('pdf')">
                                    <i class="bi bi-file-earmark-pdf me-1"></i>
                                    PDF
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm" onclick="printTable()">
                                    <i class="bi bi-printer me-1"></i>
                                    Print
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Data Table -->
                    <div class="table-responsive">
                        <table class="table table-hover align-middle" id="meetingTypeTable">
                            <thead class="table-light">
                                <tr>
                                    <th>
                                        <a href="@Url.Action("MeetingTypeList", new { searchTerm, sortBy = "MeetingTypeName", sortOrder = (sortBy == "MeetingTypeName" && sortOrder == "asc") ? "desc" : "asc" })" 
                                           class="text-decoration-none text-dark">
                                            Meeting Type Name
                                            @if (sortBy == "MeetingTypeName")
                                            {
                                                <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Remarks</th>
                                    <th>
                                        <a href="@Url.Action("MeetingTypeList", new { searchTerm, sortBy = "Created", sortOrder = (sortBy == "Created" && sortOrder == "asc") ? "desc" : "asc" })" 
                                           class="text-decoration-none text-dark">
                                            Created Date
                                            @if (sortBy == "Created")
                                            {
                                                <i class="bi bi-arrow-@(sortOrder == "asc" ? "up" : "down") ms-1"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="text-center" style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Rows.Count > 0)
                                {
                                    @foreach (System.Data.DataRow row in Model.Rows)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-info-subtle rounded-circle d-flex align-items-center justify-content-center me-2">
                                                        <i class="bi bi-tags text-info"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@row["MeetingTypeName"]</h6>
                                                        <small class="text-muted">ID: @row["MeetingTypeID"]</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-muted">@row["Remarks"]</span>
                                            </td>
                                            <td>
                                                <span class="text-muted">
                                                    @Convert.ToDateTime(row["Created"]).ToString("dd MMM yyyy")
                                                </span>
                                                <br>
                                                <small class="text-muted">
                                                    @Convert.ToDateTime(row["Created"]).ToString("hh:mm tt")
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <button type="button" 
                                                            class="btn btn-outline-info btn-sm" 
                                                            onclick="viewMeetingType(@row["MeetingTypeID"])"
                                                            title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <a asp-action="MeetingTypeAddEdit" 
                                                       asp-route-id="@row["MeetingTypeID"]"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-outline-danger btn-sm" 
                                                            onclick="deleteMeetingType(@row["MeetingTypeID"], '@row["MeetingTypeName"]')"
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="bi bi-inbox display-4 d-block mb-2"></i>
                                                @if (!string.IsNullOrEmpty(searchTerm))
                                                {
                                                    <p>No meeting types found matching "@searchTerm"</p>
                                                    <a href="@Url.Action("MeetingTypeList")" class="btn btn-outline-primary btn-sm">
                                                        Clear Search
                                                    </a>
                                                }
                                                else
                                                {
                                                    <p>No meeting types found</p>
                                                    <a asp-action="MeetingTypeAddEdit" class="btn btn-primary btn-sm">
                                                        Add First Meeting Type
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Meeting Type Details Modal -->
<div class="modal fade" id="meetingTypeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Meeting Type Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="meetingTypeModalBody">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the meeting type <strong id="deleteMeetingTypeName"></strong>?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i>
                    Delete Meeting Type
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = 0;

        function viewMeetingType(id) {
            fetch(`/MeetingType/GetMeetingTypeDetails/${id}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        const meetingType = data.data;
                        document.getElementById('meetingTypeModalBody').innerHTML = `
                            <div class="row">
                                <div class="col-sm-4"><strong>Type ID:</strong></div>
                                <div class="col-sm-8">${meetingType.MeetingTypeID}</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Type Name:</strong></div>
                                <div class="col-sm-8">${meetingType.MeetingTypeName}</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Remarks:</strong></div>
                                <div class="col-sm-8">${meetingType.Remarks}</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Meeting Count:</strong></div>
                                <div class="col-sm-8"><span class="badge bg-success">${meetingType.MeetingCount}</span></div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Created:</strong></div>
                                <div class="col-sm-8">${meetingType.Created}</div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-sm-4"><strong>Modified:</strong></div>
                                <div class="col-sm-8">${meetingType.Modified}</div>
                            </div>
                        `;
                        new bootstrap.Modal(document.getElementById('meetingTypeModal')).show();
                    } else {
                        showToast('Error', data.message, 'error');
                    }
                })
                .catch(error => {
                    showToast('Error', 'Failed to load meeting type details', 'error');
                });
        }

        function deleteMeetingType(id, name) {
            deleteId = id;
            document.getElementById('deleteMeetingTypeName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (deleteId > 0) {
                fetch('/MeetingType/Delete', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: `id=${deleteId}`
                })
                .then(response => response.json())
                .then(data => {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    if (data.success) {
                        showToast('Success', data.message, 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showToast('Error', data.message, 'error');
                    }
                })
                .catch(error => {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    showToast('Error', 'Failed to delete meeting type', 'error');
                });
            }
        });

        function showToast(title, message, type) {
            const toastHtml = `
                <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>${title}:</strong> ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;
            
            let toastContainer = document.getElementById('toastContainer');
            if (!toastContainer) {
                toastContainer = document.createElement('div');
                toastContainer.id = 'toastContainer';
                toastContainer.className = 'toast-container position-fixed top-0 end-0 p-3';
                document.body.appendChild(toastContainer);
            }
            
            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            const toastElement = toastContainer.lastElementChild;
            const toast = new bootstrap.Toast(toastElement);
            toast.show();
            
            toastElement.addEventListener('hidden.bs.toast', () => {
                toastElement.remove();
            });
        }

        function exportData(format) {
            showToast('Info', `Exporting data to ${format.toUpperCase()}...`, 'info');
        }

        function printTable() {
            window.print();
        }

        // Auto-hide alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
}