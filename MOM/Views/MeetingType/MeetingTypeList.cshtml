@model System.Data.DataTable

@{
    ViewData["Title"] = "Meeting Type List";
}

<div class="pagetitle">
    <h1>Meeting Types</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meeting Types</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-tags text-primary me-1"></i>
                            Meeting Type List
                        </h5>

                        <a asp-controller="MeetingType"
                           asp-action="MeetingTypeAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Meeting Type
                        </a>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="meetingTypeTable"
                               class="table table-hover align-middle department-table">
                            <thead>
                                <tr>
                                    <th style="width:8%">ID</th>
                                    <th>Meeting Type Name</th>
                                    <th>Remarks</th>
                                    <th style="width:15%" class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["MeetingTypeID"]</td>
                                        <td>@row["MeetingTypeName"]</td>
                                        <td>@row["Remarks"]</td>
                                        <td class="text-center">
                                            <a asp-action="MeetingTypeAddEdit"
                                               asp-route-id="@row["MeetingTypeID"]"
                                               class="btn btn-sm btn-outline-primary action-btn">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger action-btn"
                                                    onclick="deleteMeetingType(@row["MeetingTypeID"])">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new simpleDatatables.DataTable("#meetingTypeTable", {
                searchable: true,
                perPage: 5,
                perPageSelect: [5, 10, 25, 50]
            });
        });

        function deleteMeetingType(id) {
            if (confirm("Are you sure you want to delete this meeting type?")) {
                // Replace later with AJAX / POST
                alert("Delete ID: " + id);
            }
        }
    </script>
}
