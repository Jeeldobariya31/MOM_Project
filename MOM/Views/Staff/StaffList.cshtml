@model System.Data.DataTable

@{
    ViewData["Title"] = "Staff List";
}

<div class="pagetitle">
    <h1>Staff</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Staff</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-person-badge text-primary me-1"></i>
                            Staff List
                        </h5>

                        <a asp-controller="Staff"
                           asp-action="StaffAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Staff
                        </a>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="staffTable"
                               class="table table-hover align-middle department-table">
                            <thead>
                                <tr>
                                    <th style="width:6%">ID</th>
                                    <th>Staff Name</th>
                                    <th>Department</th>
                                    <th>Mobile No</th>
                                    <th>Email Address</th>
                                    <th style="width:15%" class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["StaffID"]</td>
                                        <td>@row["StaffName"]</td>
                                        <td>@row["DepartmentName"]</td>
                                        <td>@row["MobileNo"]</td>
                                        <td>@row["EmailAddress"]</td>
                                        <td class="text-center">
                                            <a asp-action="StaffAddEdit"
                                               asp-route-id="@row["StaffID"]"
                                               class="btn btn-sm btn-outline-primary action-btn">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger action-btn">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new simpleDatatables.DataTable("#staffTable", {
                searchable: true,
                perPage: 5,
                perPageSelect: [5, 10, 25, 50]
            });
        });
    </script>
}
