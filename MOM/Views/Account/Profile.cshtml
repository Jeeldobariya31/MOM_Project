@{
    ViewData["Title"] = "My Profile";
}

<div class="pagetitle">
    <h1>My Profile</h1>
</div>

<section class="section profile">
    <div class="card">
        <div class="card-body pt-4">

            <div class="row">

                <!-- Avatar -->
                <div class="col-md-4 text-center">
                    <img src="~/assets/img/profile-img.jpg"
                         alt="User Avatar"
                         class="rounded-circle mb-3"
                         width="140" />

                    <h5 class="fw-bold">@User.Identity?.Name</h5>
                    <span class="text-muted">System User</span>
                </div>

                <!-- User Info -->
                <div class="col-md-8">
                    <h6 class="mb-3 fw-bold">User Information</h6>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Full Name</div>
                        <div class="col-sm-8">@User.Identity?.Name</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Email</div>
                        <div class="col-sm-8">user@email.com</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Mobile No</div>
                        <div class="col-sm-8">+91 9876543210</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-sm-4 fw-bold">Role</div>
                        <div class="col-sm-8">Administrator</div>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Account"
                           asp-action="Settings"
                           class="btn btn-primary">
                            Edit Profile
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>
