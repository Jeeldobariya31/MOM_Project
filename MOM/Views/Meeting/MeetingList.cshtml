@model System.Data.DataTable

@{
    ViewData["Title"] = "Meeting List";
}

<div class="pagetitle">
    <h1>Meetings</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Meetings</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-calendar-event text-primary me-1"></i>
                            Meeting List
                        </h5>

                        <a asp-controller="Meeting"
                           asp-action="MeetingAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Schedule Meeting
                        </a>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="meetingTable"
                               class="table table-hover align-middle department-table">
                            <thead>
                                <tr>
                                    <th style="width:6%">ID</th>
                                    <th>Date</th>
                                    <th>Venue</th>
                                    <th>Meeting Type</th>
                                    <th>Department</th>
                                    <th>Status</th>
                                    <th style="width:15%" class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    bool isCancelled = Convert.ToBoolean(row["IsCancelled"]);

                                    <tr>
                                        <td>@row["MeetingID"]</td>
                                        <td>@Convert.ToDateTime(row["MeetingDate"]).ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>@row["VenueName"]</td>
                                        <td>@row["MeetingTypeName"]</td>
                                        <td>@row["DepartmentName"]</td>
                                        <td>
                                            @if (isCancelled)
                                            {
                                                <span class="badge bg-danger">Cancelled</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Scheduled</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="MeetingAddEdit"
                                               asp-route-id="@row["MeetingID"]"
                                               class="btn btn-sm btn-outline-primary action-btn">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger action-btn"
                                                    onclick="cancelMeeting(@row["MeetingID"])">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new simpleDatatables.DataTable("#meetingTable", {
                searchable: true,
                perPage: 5,
                perPageSelect: [5, 10, 25, 50]
            });
        });

        function cancelMeeting(id) {
            if (confirm("Are you sure you want to cancel this meeting?")) {
                alert("Cancel Meeting ID: " + id);
            }
        }
    </script>
}
