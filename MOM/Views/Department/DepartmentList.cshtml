@model System.Data.DataTable

@{
    ViewData["Title"] = "Department List";
}

<div class="pagetitle">
    <h1>Departments</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item active">Departments</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-building text-primary me-1"></i>
                            Department List
                        </h5>

                        <a asp-controller="Department"
                           asp-action="DepartmentAddEdit"
                           class="btn btn-primary btn-sm rounded-pill px-3">
                            <i class="bi bi-plus-lg me-1"></i>
                            Add Department
                        </a>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="departmentTable"
                               class="table table-hover align-middle department-table">
                            <thead>
                                <tr>
                                    <th style="width:8%">ID</th>
                                    <th>Department Name</th>
                                    <th data-type="date" data-format="YYYY-MM-DD">Created</th>
                                    <th data-type="date" data-format="YYYY-MM-DD">Modified</th>
                                    <th style="width:15%" class="text-center">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    <tr>
                                        <td>@row["DepartmentID"]</td>
                                        <td>@row["DepartmentName"]</td>
                                        <td>@Convert.ToDateTime(row["Created"]).ToString("yyyy-MM-dd")</td>
                                        <td>@Convert.ToDateTime(row["Modified"]).ToString("yyyy-MM-dd")</td>
                                        <td class="text-center">
                                            <a asp-action="DepartmentAddEdit"
                                               asp-route-id="@row["DepartmentID"]"
                                               class="btn btn-sm btn-outline-primary action-btn">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <button type="button"
                                                    class="btn btn-sm btn-outline-danger action-btn"
                                                    onclick="deleteDepartment(@row["DepartmentID"])">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new simpleDatatables.DataTable("#departmentTable", {
                searchable: true,
                perPage: 5,
                perPageSelect: [5, 10, 25, 50]
            });
        });

        function deleteDepartment(id) {
            if (confirm("Are you sure you want to delete this department?")) {
                alert("Delete Department ID: " + id);
            }
        }
    </script>
}
