@model MOM.Models.DepartmentModel

@{
    ViewData["Title"] = Model.DepartmentID > 0 ? "Edit Department" : "Add Department";
    bool isEdit = Model.DepartmentID > 0;
}

<div class="pagetitle">
    <h1>@(isEdit ? "Edit Department" : "Add Department")</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Master</li>
            <li class="breadcrumb-item">
                <a asp-action="DepartmentList">Departments</a>
            </li>
            <li class="breadcrumb-item active">@(isEdit ? "Edit" : "Add")</li>
        </ol>
    </nav>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<section class="section">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <div class="avatar-sm bg-primary-subtle rounded-circle d-flex align-items-center justify-content-center me-3">
                            <i class="bi bi-building text-primary"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">
                                @(isEdit ? "Edit Department" : "Add New Department")
                            </h5>
                            <p class="text-muted small mb-0">
                                @(isEdit ? "Update department information" : "Create a new department")
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <form asp-action="DepartmentAddEdit" method="post" id="departmentForm" novalidate>
                        @Html.AntiForgeryToken()
                        
                        <!-- Hidden ID for Edit -->
                        <input type="hidden" asp-for="DepartmentID" />
                        <input type="hidden" asp-for="Created" />

                        <div class="row">
                            <div class="col-md-8">
                                <!-- Department Name -->
                                <div class="mb-4">
                                    <label asp-for="DepartmentName" class="form-label fw-bold">
                                        <i class="bi bi-building me-1"></i>
                                        Department Name 
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DepartmentName"
                                           class="form-control form-control-lg"
                                           maxlength="100"
                                           placeholder="Enter department name"
                                           autocomplete="off" />
                                    <span asp-validation-for="DepartmentName" class="text-danger small"></span>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Enter a unique department name (2-100 characters)
                                    </div>
                                </div>
                            </div>

                            @if (isEdit)
                            {
                                <div class="col-md-4">
                                    <!-- Department Statistics -->
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <h6 class="card-title">
                                                <i class="bi bi-graph-up text-info me-1"></i>
                                                Department Statistics
                                            </h6>
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="border-end">
                                                        <h4 class="text-primary mb-0">@Model.StaffCount</h4>
                                                        <small class="text-muted">Staff Members</small>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <h4 class="text-success mb-0">@Model.MeetingCount</h4>
                                                    <small class="text-muted">Meetings</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Audit Information -->
                                    <div class="mt-3">
                                        <h6 class="text-muted">
                                            <i class="bi bi-clock-history me-1"></i>
                                            Audit Information
                                        </h6>
                                        <div class="small text-muted">
                                            <div class="mb-1">
                                                <strong>Created:</strong> @Model.Created.ToString("dd MMM yyyy, hh:mm tt")
                                            </div>
                                            <div>
                                                <strong>Modified:</strong> @Model.Modified.ToString("dd MMM yyyy, hh:mm tt")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Form Actions -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a asp-action="DepartmentList" class="btn btn-outline-secondary">
                                            <i class="bi bi-arrow-left me-1"></i>
                                            Back to List
                                        </a>
                                    </div>
                                    <div>
                                        <button type="button" class="btn btn-outline-secondary me-2" onclick="resetForm()">
                                            <i class="bi bi-arrow-clockwise me-1"></i>
                                            Reset
                                        </button>
                                        <button type="submit" class="btn btn-primary" id="submitBtn">
                                            <i class="bi bi-@(isEdit ? "check" : "plus")-lg me-1"></i>
                                            @(isEdit ? "Update Department" : "Save Department")
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (isEdit && (Model.StaffCount > 0 || Model.MeetingCount > 0))
            {
                <!-- Related Information -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-link-45deg text-warning me-1"></i>
                            Related Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (Model.StaffCount > 0)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-primary-subtle rounded">
                                        <i class="bi bi-people-fill text-primary fs-4 me-3"></i>
                                        <div>
                                            <h6 class="mb-0">@Model.StaffCount Staff Members</h6>
                                            <small class="text-muted">Associated with this department</small>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.MeetingCount > 0)
                            {
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 bg-success-subtle rounded">
                                        <i class="bi bi-calendar-event-fill text-success fs-4 me-3"></i>
                                        <div>
                                            <h6 class="mb-0">@Model.MeetingCount Meetings</h6>
                                            <small class="text-muted">Associated with this department</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <strong>Note:</strong> This department cannot be deleted as it has associated records.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const form = document.getElementById('departmentForm');
            const submitBtn = document.getElementById('submitBtn');
            const departmentNameInput = document.querySelector('input[name="DepartmentName"]');

            // Real-time validation
            departmentNameInput.addEventListener('input', function() {
                validateDepartmentName();
            });

            // Form submission
            form.addEventListener('submit', function(e) {
                if (!validateForm()) {
                    e.preventDefault();
                    return false;
                }
                
                // Show loading state
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Saving...';
            });

            function validateDepartmentName() {
                const value = departmentNameInput.value.trim();
                const feedback = departmentNameInput.parentNode.querySelector('.text-danger');
                
                if (value.length < 2) {
                    departmentNameInput.classList.add('is-invalid');
                    departmentNameInput.classList.remove('is-valid');
                    return false;
                } else if (value.length > 100) {
                    departmentNameInput.classList.add('is-invalid');
                    departmentNameInput.classList.remove('is-valid');
                    return false;
                } else if (!/^[a-zA-Z0-9\s&.-]+$/.test(value)) {
                    departmentNameInput.classList.add('is-invalid');
                    departmentNameInput.classList.remove('is-valid');
                    return false;
                } else {
                    departmentNameInput.classList.remove('is-invalid');
                    departmentNameInput.classList.add('is-valid');
                    return true;
                }
            }

            function validateForm() {
                let isValid = true;
                
                // Validate department name
                if (!validateDepartmentName()) {
                    isValid = false;
                }
                
                return isValid;
            }
        });

        function resetForm() {
            if (confirm('Are you sure you want to reset the form? All changes will be lost.')) {
                document.getElementById('departmentForm').reset();
                // Remove validation classes
                document.querySelectorAll('.is-valid, .is-invalid').forEach(el => {
                    el.classList.remove('is-valid', 'is-invalid');
                });
            }
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <!-- Enables client-side validation -->
    <partial name="_ValidationScriptsPartial" />
}
