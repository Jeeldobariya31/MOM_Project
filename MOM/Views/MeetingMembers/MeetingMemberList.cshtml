@model System.Data.DataTable

@{
    ViewData["Title"] = "Meeting Members";
}

<div class="pagetitle">
    <h1>Meeting Members</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">Meetings</li>
            <li class="breadcrumb-item active">Meeting Members</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card department-card">
                <div class="card-body">

                    <!-- Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-people text-primary me-1"></i>
                            Meeting Member List
                        </h5>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table id="meetingMemberTable"
                               class="table table-hover align-middle department-table">
                            <thead>
                                <tr>
                                    <th style="width:6%">ID</th>
                                    <th>Meeting</th>
                                    <th>Staff Name</th>
                                    <th>Department</th>
                                    <th>Presence</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (System.Data.DataRow row in Model.Rows)
                                {
                                    bool isPresent = Convert.ToBoolean(row["IsPresent"]);

                                    <tr>
                                        <td>@row["MeetingMemberID"]</td>
                                        <td>@row["MeetingTitle"]</td>
                                        <td>@row["StaffName"]</td>
                                        <td>@row["DepartmentName"]</td>
                                        <td>
                                            @if (isPresent)
                                            {
                                                <span class="badge bg-success">Present</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Absent</span>
                                            }
                                        </td>
                                        <td>@row["Remarks"]</td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- End Table -->

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            new simpleDatatables.DataTable("#meetingMemberTable", {
                searchable: true,
                perPage: 5,
                perPageSelect: [5, 10, 25, 50]
            });
        });
    </script>
}
